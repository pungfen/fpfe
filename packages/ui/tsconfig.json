{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "esModuleInterop": true,
    
    "target": "ESNext",
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,

    "jsx": "preserve"
  },
  "include": ["*.config.ts", "src/**/*.ts", "src/**/*.tsx", "utils.d.ts"]
}