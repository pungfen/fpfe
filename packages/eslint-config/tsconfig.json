{
  "compilerOptions": {
    "esModuleInterop": true,
    
    "target": "ESNext",
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["*.config.ts", "scripts", "src"]
}