{
  "compilerOptions": {
    "baseUrl": ".",
    
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",

    "paths": {
      "@/*": ["/src/*"]
    },
    "skipLibCheck": true,

    "strict": true,
    "target": "ESNext"
  },
  "include": ["*.config.ts", "src", "tests"]
}