{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "esModuleInterop": true,
    
    "target": "ESNext",
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,

    "jsx": "preserve",

    "types": ["vite/client", "element-plus/global"]
  },
  "include": ["*.config.ts", "utils.d.ts", "auto-imports.d.ts", "scripts", "src"]
}