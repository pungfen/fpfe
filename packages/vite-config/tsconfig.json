{
  "compilerOptions": {
    "esModuleInterop": true,
    
    "target": "ESNext",
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,

    "isolatedModules": true,

    "types": ["vite/client"]
  },
  "include": ["*.config.ts", "src"]
}